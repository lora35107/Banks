<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_chase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="28dp"
        android:text="CHASE BANK"
        app:layout_constraintBottom_toTopOf="@+id/btn_standard"
        app:layout_constraintEnd_toStartOf="@+id/btn_cooperative"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cooperative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="18dp"
        android:text="cooperative bank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_chase"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="stadard chartered"
        app:layout_constraintBottom_toBottomOf="@+id/btn_diamond"
        app:layout_constraintEnd_toStartOf="@+id/btn_diamond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_diamond" />

    <Button
        android:id="@+id/btn_equity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="equity bank"
        app:layout_constraintEnd_toStartOf="@+id/btn_kcb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_standard" />

    <Button
        android:id="@+id/btn_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="23dp"
        android:text="Diamond trust bank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_standard"
        app:layout_constraintTop_toBottomOf="@+id/btn_cooperative" />

    <Button
        android:id="@+id/btn_kcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="22dp"
        android:text="KCB BANK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_equity"
        app:layout_constraintTop_toBottomOf="@+id/btn_diamond" />
</androidx.constraintlayout.widget.ConstraintLayout>